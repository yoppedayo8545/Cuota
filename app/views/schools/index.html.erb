<header class='top_page_header'>
  <div class='search-bar-contents'>
   <%= link_to image_tag('cuota-sample.png', class:"cuota-icon"), "/" %>
    <form class='search-form' action="#">
    <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "ecalbt014_002.png", class:"search-icon" %>
      </button>
    </form>
  </div>

  <div class='user-contents'>
      <% if nursing_teacher_signed_in? %>
        <ul class='current-name'>
          <li class='school-name'><%= @nursing_teacher.school.name %></li>
          <li><%= link_to "#{current_nursing_teacher.last_name} 先生", edit_nursing_teacher_registration_path, class: "edit" %></li>
          <li class='hello'><%= "こんにちは" %></li>
        </ul>
        <ul class='user-content'>  
          <li><%= link_to 'ログアウト', destroy_nursing_teacher_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
          <li><%= link_to '新規登録', new_nursing_teacher_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>

</header>