              <p><%= f.text_area :other_ht, placeholder: "例)  ワンワンが好き", autocomplete: "other_ht", size: "100x5" %></p>
            </div>
          <input id="TAB-04" type="radio" name="TAB" class="tab-switch" /><label class="tab-label" for="TAB-04">養護教諭メモ</label>
