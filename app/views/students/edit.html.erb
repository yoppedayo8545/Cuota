          <div class="tab-content">
            <p><%= f.label :special_support, "特別支援" %></p><br>
            <p><%= f.text_area :special_support, placeholder: "例)  寝かしつけは抱っこ", autocomplete: "special_support", size: "100x5" %></p>
          </div>
